<h1>All Links</h1>
<div class="panel panel-default">
  <div class="panel-heading">Current Shortlinks<span class="pull-right"><%= link_to 'Create your own!', new_link_path %></span></div>
<table class="table table-hover">
  <tr>
    <th>Shortlink</th>
    <th>Regex?</th>
    <th>URL</th>
    <th>Argument String</th>
    <th></th>
  </tr>
  <% @links.each do |link| %>
    <tr>
      <td><%= link.shortlink %></td>
      <td><%= link.type == RegexLink.name %></td>
      <td class="url"><a href="<%= link.url %>"><%= link.url %></a></td>
      <td><%= link.argsstr %></td>
      <td><%= link_to 'Details', link_path(link) %></td>
    </tr>
  <% end %>
</table>
</div>
</div>
